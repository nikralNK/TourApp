<Window x:Class="ShelterAppProduction.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" Height="580" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource LightBeige}">
    <Grid>
        <Border Style="{StaticResource CardBorder}"
                Width="380"
                Height="500"
                VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Приют для животных"
                          Style="{StaticResource TitleText}"
                          HorizontalAlignment="Center"
                          Margin="0,10,0,10"/>

                <TextBlock Text="Вход в систему"
                          Style="{StaticResource SubtitleText}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20"/>

                <TextBlock Text="Логин:" Margin="10,10,10,5"/>
                <TextBox x:Name="UsernameTextBox"
                        Height="40"
                        Margin="10,0,10,10"
                        VerticalContentAlignment="Center"/>

                <TextBlock Text="Пароль:" Margin="10,5,10,5"/>
                <PasswordBox x:Name="PasswordBox"
                            Height="40"
                            Margin="10,0,10,10"
                            VerticalContentAlignment="Center"/>

                <Button Content="Войти"
                       Click="LoginButton_Click"
                       Height="40"
                       Margin="10,20,10,5"/>

                <Button Content="Сбросить пароль"
                       Click="ResetPasswordButton_Click"
                       Height="40"
                       Background="{StaticResource LightGray}"
                       Foreground="{StaticResource DarkGray}"
                       Margin="10,5,10,5"/>

                <Button Content="Регистрация"
                       Click="RegisterButton_Click"
                       Height="40"
                       Background="{StaticResource PrimaryGreen}"
                       Margin="10,5,10,5"/>

                <TextBlock x:Name="ErrorTextBlock"
                          Text=""
                          Foreground="Red"
                          HorizontalAlignment="Center"
                          Margin="10,10,10,10"
                          TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
