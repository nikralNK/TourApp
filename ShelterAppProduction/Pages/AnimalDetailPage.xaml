<Page x:Class="ShelterAppProduction.Pages.AnimalDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ShelterAppProduction.Pages"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="1200"
      Background="{StaticResource LightBeige}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Content="← Назад к каталогу" Click="BackButton_Click" HorizontalAlignment="Left" Width="200"/>

            <TabControl Grid.Row="1" Margin="0,20,0,0">
                <TabItem Header="Информация о питомце">
                    <Grid Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource CardBorder}" Margin="0,0,10,0">
                            <StackPanel>
                        <TextBlock x:Name="AnimalNameTextBlock" Style="{StaticResource TitleText}" HorizontalAlignment="Center"/>

                        <Border BorderBrush="{StaticResource LightGray}" BorderThickness="2" Width="400" Height="300" Margin="0,20,0,20" HorizontalAlignment="Center" ClipToBounds="True">
                            <Image x:Name="PhotoImage" Stretch="UniformToFill"/>
                        </Border>

                        <StackPanel Margin="0,20,0,0">
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock Text="Тип: " FontWeight="Bold" FontSize="16" Width="150"/>
                                <TextBlock x:Name="TypeTextBlock" FontSize="16"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock Text="Порода: " FontWeight="Bold" FontSize="16" Width="150"/>
                                <TextBlock x:Name="BreedTextBlock" FontSize="16"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock Text="Дата рождения: " FontWeight="Bold" FontSize="16" Width="150"/>
                                <TextBlock x:Name="DateOfBirthTextBlock" FontSize="16"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock Text="Возраст: " FontWeight="Bold" FontSize="16" Width="150"/>
                                <TextBlock x:Name="AgeTextBlock" FontSize="16"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock Text="Пол: " FontWeight="Bold" FontSize="16" Width="150"/>
                                <TextBlock x:Name="GenderTextBlock" FontSize="16"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock Text="Размер: " FontWeight="Bold" FontSize="16" Width="150"/>
                                <TextBlock x:Name="SizeTextBlock" FontSize="16"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock Text="Характер: " FontWeight="Bold" FontSize="16" Width="150"/>
                                <TextBlock x:Name="TemperamentTextBlock" FontSize="16"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock Text="Статус: " FontWeight="Bold" FontSize="16" Width="150"/>
                                <TextBlock x:Name="StatusTextBlock" FontSize="16"/>
                            </StackPanel>
                        </StackPanel>

                                <Button x:Name="FavoriteButton" Content="♡ Добавить в избранное" Click="FavoriteButton_Click" Margin="0,20,0,0" Height="40"/>
                                <Button x:Name="EditButton" Content="✏ Редактировать" Click="EditButton_Click" Margin="0,10,0,0" Height="40" Visibility="Collapsed" Background="{StaticResource PrimaryGreen}"/>
                            </StackPanel>
                        </Border>

                        <Border x:Name="ApplicationBorder" Grid.Column="1" Style="{StaticResource CardBorder}" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Подать заявку на опекунство" Style="{StaticResource SubtitleText}"/>

                        <TextBlock Text="Полное имя:" Margin="0,10,0,0"/>
                        <TextBox x:Name="FullNameTextBox" Height="40"/>

                        <TextBlock Text="Телефон:" Margin="0,10,0,0"/>
                        <TextBox x:Name="PhoneTextBox" Height="40"/>

                        <TextBlock Text="Email:" Margin="0,10,0,0"/>
                        <TextBox x:Name="EmailTextBox" Height="40"/>

                        <TextBlock Text="Комментарии:" Margin="0,10,0,0"/>
                        <TextBox x:Name="CommentsTextBox" Height="100" TextWrapping="Wrap" AcceptsReturn="True"/>

                        <Button Content="Подать заявку" Click="SubmitApplicationButton_Click" Margin="0,20,0,0" Height="45"/>

                            <TextBlock x:Name="ApplicationStatusTextBlock"
                                      Text=""
                                      Foreground="Green"
                                      HorizontalAlignment="Center"
                                      Margin="0,10,0,0"
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                    </Grid>
                </TabItem>

                <TabItem Header="Медицинская карта">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border x:Name="AddRecordBorder" Grid.Row="0" Style="{StaticResource CardBorder}" Margin="0,0,0,20" Visibility="Collapsed">
                                <StackPanel>
                                    <TextBlock Text="Добавить медицинскую запись" Style="{StaticResource SubtitleText}" Margin="0,0,0,15"/>

                                    <TextBlock Text="Дата визита:" Margin="0,5,0,5"/>
                                    <DatePicker x:Name="VisitDatePicker" Height="40" Margin="0,0,0,10"/>

                                    <TextBlock Text="Диагноз:" Margin="0,5,0,5"/>
                                    <TextBox x:Name="DiagnosisTextBox" Height="40" Margin="0,0,0,10"/>

                                    <TextBlock Text="Лечение:" Margin="0,5,0,5"/>
                                    <TextBox x:Name="TreatmentTextBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"/>

                                    <TextBlock Text="Примечания:" Margin="0,5,0,5"/>
                                    <TextBox x:Name="NotesTextBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"/>

                                    <Button Content="Добавить запись" Click="AddMedicalRecordButton_Click" Height="45" Margin="0,10,0,0" Background="{StaticResource PrimaryGreen}"/>

                                    <TextBlock x:Name="MedicalRecordStatusTextBlock"
                                              Text=""
                                              Foreground="Green"
                                              HorizontalAlignment="Center"
                                              Margin="0,10,0,0"
                                              FontWeight="Bold"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="1" Style="{StaticResource CardBorder}">
                                <StackPanel>
                                    <TextBlock Text="История медицинских осмотров" Style="{StaticResource TitleText}" Margin="0,0,0,20"/>

                            <ItemsControl x:Name="MedicalRecordsItemsControl">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource CardBorder}" Margin="0,0,0,15" Background="White">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                                    <TextBlock Text="Дата визита: " FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding VisitDate, StringFormat='{}{0:dd.MM.yyyy}'}" />
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                                    <TextBlock Text="Ветеринар: " FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding VeterinarianName}" />
                                                </StackPanel>

                                                <StackPanel Margin="0,0,0,10">
                                                    <TextBlock Text="Диагноз:" FontWeight="Bold" Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding Diagnosis}" TextWrapping="Wrap"/>
                                                </StackPanel>

                                                <StackPanel Margin="0,0,0,10">
                                                    <TextBlock Text="Лечение:" FontWeight="Bold" Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding Treatment}" TextWrapping="Wrap"/>
                                                </StackPanel>

                                                <StackPanel>
                                                    <TextBlock Text="Примечания:" FontWeight="Bold" Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding Notes}" TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                                    <TextBlock x:Name="NoMedicalRecordsTextBlock"
                                              Text="Нет медицинских записей"
                                              Foreground="Gray"
                                              HorizontalAlignment="Center"
                                              Margin="0,20,0,0"
                                              Visibility="Collapsed"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>
    </ScrollViewer>
</Page>
