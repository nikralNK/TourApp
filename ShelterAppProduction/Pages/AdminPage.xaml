<Page x:Class="ShelterAppProduction.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ShelterAppProduction.Pages"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="1200"
      Background="{StaticResource LightBeige}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Панель администратора" Style="{StaticResource TitleText}"/>

        <Border Grid.Row="1" Style="{StaticResource CardBorder}" Margin="0,20,0,0">
            <StackPanel>
                <TextBlock Text="Заявки на опекунство" Style="{StaticResource SubtitleText}"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,10">
                    <Button Content="Добавить животное" Click="AddAnimalButton_Click" Width="200" Margin="0,0,10,0" Background="{StaticResource PrimaryGreen}"/>
                    <Button Content="Обновить список" Click="RefreshButton_Click" Width="200"/>
                </StackPanel>

                <DataGrid x:Name="ApplicationsDataGrid"
                         AutoGenerateColumns="False"
                         IsReadOnly="False"
                         CanUserAddRows="False"
                         CanUserDeleteRows="False"
                         HeadersVisibility="Column"
                         GridLinesVisibility="All"
                         FontSize="14"
                         FontFamily="Segoe UI"
                         RowHeight="40"
                         Margin="0,10,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
                        <DataGridTemplateColumn Header="ID Животного" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding IdAnimal}"
                                              MouseEnter="AnimalId_MouseEnter"
                                              MouseLeave="AnimalId_MouseLeave"
                                              Tag="{Binding IdAnimal}"
                                              Cursor="Hand"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="ID Опекуна" Binding="{Binding IdGuardian}" Width="120" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Дата заявки" Binding="{Binding ApplicationDate, StringFormat='dd.MM.yyyy HH:mm'}" Width="150" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120"/>
                        <DataGridTextColumn Header="Комментарии" Binding="{Binding Comments}" Width="*" IsReadOnly="True"/>
                        <DataGridTemplateColumn Header="Действия" Width="250">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Одобрить" Click="ApproveButton_Click" Tag="{Binding Id}" Margin="2" Padding="10,5">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Одобрена">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Отклонена">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <Button Content="Отклонить" Click="RejectButton_Click" Tag="{Binding Id}" Margin="2" Padding="10,5" Background="#D32F2F">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Одобрена">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Отклонена">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>

        <Popup x:Name="AnimalInfoPopup"
               PlacementTarget="{Binding ElementName=ApplicationsDataGrid}"
               Placement="Mouse"
               AllowsTransparency="True"
               StaysOpen="True">
            <Border Background="White"
                    BorderBrush="{StaticResource PrimaryGreen}"
                    BorderThickness="2"
                    CornerRadius="8"
                    Padding="15"
                    MaxWidth="400">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock x:Name="PopupAnimalName" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                    <TextBlock x:Name="PopupAnimalType" Margin="0,0,0,5"/>
                    <TextBlock x:Name="PopupAnimalBreed" Margin="0,0,0,5"/>
                    <TextBlock x:Name="PopupAnimalGender" Margin="0,0,0,5"/>
                    <TextBlock x:Name="PopupAnimalAge" Margin="0,0,0,5"/>
                    <TextBlock x:Name="PopupAnimalSize" Margin="0,0,0,5"/>
                    <TextBlock x:Name="PopupAnimalTemperament" Margin="0,0,0,5"/>
                    <TextBlock x:Name="PopupAnimalStatus" Margin="0,0,0,5"/>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</Page>
