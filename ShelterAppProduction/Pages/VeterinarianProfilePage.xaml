<Page x:Class="ShelterAppProduction.Pages.VeterinarianProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ShelterAppProduction.Pages"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="1200"
      Background="{StaticResource LightBeige}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TitleTextBlock" Grid.Row="0" Text="Добавить ветеринара" Style="{StaticResource TitleText}"/>

            <Border Grid.Row="1" Style="{StaticResource CardBorder}" Margin="0,20,0,0" MaxWidth="600">
                <StackPanel>
                    <TextBlock Text="ФИО:" Margin="5"/>
                    <TextBox x:Name="FullNameTextBox" Height="40" Margin="5"/>

                    <TextBlock Text="Специализация:" Margin="5,15,5,5"/>
                    <TextBox x:Name="SpecializationTextBox" Height="40" Margin="5"/>

                    <TextBlock Text="Телефон:" Margin="5,15,5,5"/>
                    <TextBox x:Name="PhoneNumberTextBox" Height="40" Margin="5"/>

                    <TextBlock Text="Номер лицензии:" Margin="5,15,5,5"/>
                    <TextBox x:Name="LicenseNumberTextBox" Height="40" Margin="5"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,10">
                        <Button x:Name="SaveButton" Content="Сохранить" Click="SaveButton_Click" Width="150" Height="45" Margin="10,0" Background="{StaticResource PrimaryGreen}"/>
                        <Button Content="Отмена" Click="CancelButton_Click" Width="150" Height="45" Margin="10,0" Background="{StaticResource LightGray}" Foreground="{StaticResource DarkGray}"/>
                    </StackPanel>

                    <TextBlock x:Name="StatusTextBlock"
                              Text=""
                              Foreground="Green"
                              HorizontalAlignment="Center"
                              Margin="10"
                              FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
