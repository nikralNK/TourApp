<Window x:Class="ShelterAppProduction.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="600" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource LightBeige}">
    <Grid>
        <Border Style="{StaticResource CardBorder}"
                Width="380"
                Height="550"
                VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Регистрация"
                          Style="{StaticResource TitleText}"
                          HorizontalAlignment="Center"
                          Margin="0,10,0,20"/>

                <TextBlock Text="Логин:" Margin="10,10,10,5"/>
                <TextBox x:Name="UsernameTextBox"
                        Height="40"
                        Margin="10,0,10,10"
                        VerticalContentAlignment="Center"/>

                <TextBlock Text="Пароль:" Margin="10,5,10,5"/>
                <PasswordBox x:Name="PasswordBox"
                            Height="40"
                            Margin="10,0,10,10"
                            VerticalContentAlignment="Center"/>

                <TextBlock Text="Подтверждение пароля:" Margin="10,5,10,5"/>
                <PasswordBox x:Name="ConfirmPasswordBox"
                            Height="40"
                            Margin="10,0,10,10"
                            VerticalContentAlignment="Center"/>

                <TextBlock Text="Email:" Margin="10,5,10,5"/>
                <TextBox x:Name="EmailTextBox"
                        Height="40"
                        Margin="10,0,10,10"
                        VerticalContentAlignment="Center"/>

                <TextBlock Text="Полное имя:" Margin="10,5,10,5"/>
                <TextBox x:Name="FullNameTextBox"
                        Height="40"
                        Margin="10,0,10,10"
                        VerticalContentAlignment="Center"/>

                <Button Content="Зарегистрироваться"
                       Click="RegisterButton_Click"
                       Height="40"
                       Margin="10,20,10,5"/>

                <Button Content="Назад к входу"
                       Click="BackButton_Click"
                       Height="40"
                       Background="{StaticResource LightGray}"
                       Foreground="{StaticResource DarkGray}"
                       Margin="10,5,10,5"/>

                <TextBlock x:Name="StatusTextBlock"
                          Text=""
                          Foreground="Red"
                          HorizontalAlignment="Center"
                          Margin="10,10,10,0"
                          TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
